RUN mkdir -p /custom/bin && mkdir -p /custom/dotfiles/vim && mkdir -p /custom/runner
ADD https://raw2.github.com/cybersiddhu/stevedore/master/modules/viminstall /custom/runner/viminstall
RUN chmod u+x /custom/runner/viminstall && yum -y install ctags ncurses ncurses-libs ncurses-devel 
RUN /custom/runner/viminstall

## -spf13 vim plugin(+vundle)
RUN curl http://beyondgrep.com/ack-2.10-single-file > /usr/local/bin/ack && chmod 0755 /usr/local/bin/ack && \
 git clone https://github.com/gmarik/vundle /custom/dotfiles/vim/bundle/vundle && \
 git clone https://github.com/cybersiddhu/spf13-vim.git -b feature-3.0/container /custom/dotfiles/vim/spf13 && \
 ln -sf /custom/dotfiles/vim/spf13/.vimrc /custom/dotfiles/vim/.vimrc && \
 ln -sf /custom/dotfiles/vim/spf13/.vimrc.bundles /custom/dotfiles/vim/.vimrc.bundles && \
 ln -sf /custom/dotfiles/vim/spf13/.vimrc.bundles.fork /custom/dotfiles/vim/.vimrc.bundles.fork && \
 ln -sf /custom/dotfiles/vim/spf13/.vimrc.fork /custom/dotfiles/vim/.vimrc.fork && \
 ln -sf /custom/dotfiles/vim/spf13/.vimrc.before.local /custom/dotfiles/vim/.vimrc.before.local && \
 ln -sf /custom/dotfiles/vim/spf13/.vimrc.local /custom/dotfiles/vim/.vimrc.local && \
 ln -sf /custom/dotfiles/vim/spf13/.vimrc.bundles.local /custom/dotfiles/vim/.vimrc.bundles.local

ENV VIMDIR /custom/dotfiles/vim
ADD https://raw2.github.com/cybersiddhu/stevedore/master/modules/vimbundle /custom/runner/vimbundle
RUN chmod u+x /custom/runner/vimbundle 
